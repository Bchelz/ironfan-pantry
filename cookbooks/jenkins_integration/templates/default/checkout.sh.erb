#!/usr/bin/env bash
source `dirname $0`/shared.inc
big_boy_pants

h1 "Getting all repositories (inc. bundled code & branches) up-to-date"

for repo in $REPOS; do
  name=${repo##*/}
  name=${name%.git}

  cd $WORKSPACE
  if [ ! -d $name ]; then
    h2 "Checking out $name"
    git clone $repo
    switch_to $name

    h3 "get remotes"
    for remote in `git branch -r | grep -v origin/master`; do
      git checkout -t remotes/$remote
    done
  else
    h2 "Updating $name"
    switch_to $name
    git checkout -f master
    git pull

    h3 "update remotes"
    for remote in `git branch -r | grep -v origin/master`; do
      git checkout -f ${remote#*/}
      git pull
    done
  fi

  h3 "Get submodules"
  git checkout -f master
  git submodule update --init

  ensure_bundle
done
