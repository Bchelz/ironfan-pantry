#!/usr/bin/env bash
#
# Launch a known-broken instance
#
source `dirname $0`/shared.inc
export FACET=<%= node[:jenkins_integration][:ironfan_ci][:broken] %>
repo=<%= node[:jenkins_integration][:ironfan_ci][:test_repo] %>

$ROOT_DIR/checkout.sh $repo
pushd $TEST_PATH
  $ROOT_DIR/bundler.sh
  source $ROOT_DIR/launch.inc
popd
