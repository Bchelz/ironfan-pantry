{
  "node_name":          "cocina-chef_server-0",
  "cluster_name":       "cocina",
  "facet_name":         "chef_server",
  "facet_index":        "0",

  "chef_server":  {
    "server_url":       "http://localhost:4000",
    "init_style":       "runit",
    "webui_enabled":    true,
    "validation_client_name": "cocina-validator",
    "validation_client_file": "/etc/chef/cocina-validator.pem",
    "solr_heap_size":         "128M"
  },

  "run_list": [
    "role[base_role]",
    "role[chef_client]",
    "role[ssh]",
    "recipe[cloud_utils::virtualbox_metadata]",
    "recipe[package_set]",
    "role[nfs_client]",
    "role[dashboard]" ],

  "run_away":[
    "recipe[chef-server::rubygems-install]",
  "_"],

  "nfs":  { "mounts":   [
    ["/home/flip", { "owner": "flip", "remote_path": "/Users/flip" } ],
    ["/cloud",     { "owner": "root", "remote_path": "/cloud"      } ]
  ] },

  "package_set":        {
    "install": [ "base", "dev", "sysadmin", "text", "vagrant", "cluster_chef" ],
    "gems": { "cluster_chef": ["cluster_chef"] }
  },
  "tuning":             { "swappiness": "75", "overcommit_memory": "1", "overcommit_ratio": "100" },
  "java":               { "install_flavor":"sun"},
  "apt":                { "cloudera": { "force_distro": "maverick" } },
  "volumes": { "root":  { "scratch":true,"device":"/dev/mapper/natty--base-root","mount_point":"/","mountable":false } },
  
"_":"_"}
